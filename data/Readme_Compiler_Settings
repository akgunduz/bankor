ARM Cortex 8-----
CFLAGS='-O3 -pipe -march=armv7-a -mtune=cortex-a8 -mfloat-abi=hard -mfpu=neon -mvectorize-with-neon-quad' ./configure --host=arm-linux-gnueabihf --prefix=/Volumes/Toolchains/libs/c8/4.8

ARM Cortex 7-----
CFLAGS='-O3 -pipe -march=armv7-a -mtune=cortex-a7 -mfloat-abi=hard -mfpu=neon-vfpv4 -mvectorize-with-neon-quad' ./configure --host=arm-linux-gnueabihf --prefix=/Volumes/Toolchains/libs/c7/4.8

